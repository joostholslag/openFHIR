{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "engine": {
            "type": "string"
        },
        "type": {
            "type": "string"
        },
        "metadata": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "version"
            ]
        },
        "spec": {
            "type": "object",
            "properties": {
                "system": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "system",
                "version"
            ]
        },
        "context": {
            "type": "object",
            "properties": {
                "profileUrl": {
                    "type": "string"
                },
                "templateId": {
                    "type": "string"
                },
                "archetypes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "extension": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "start": {
                    "type": "string"
                },
                "extensions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "archetypes",
                "profileUrl",
                "templateId"
            ]
        },
        "fhir": {
            "type": "object",
            "properties": {
                "post-processors": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "referenceEndpoint": {
                            "type": "string"
                        },
                        "condition": {
                            "type": "object",
                            "properties": {
                                "targetRoot": {
                                    "type": "string"
                                },
                                "targetAttribute": {
                                    "type": "string"
                                },
                                "operator": {
                                    "type": "string"
                                },
                                "criteria": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "criteria",
                                "operator",
                                "targetAttribute",
                                "targetRoot"
                            ]
                        },
                        "referencedResource": {
                            "type": "object",
                            "properties": {
                                "condition": {
                                    "type": "object",
                                    "properties": {
                                        "target": {
                                            "type": "string"
                                        },
                                        "operator": {
                                            "type": "string"
                                        },
                                        "criteria": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "criteria",
                                        "operator",
                                        "target"
                                    ]
                                }
                            },
                            "required": [
                                "condition"
                            ]
                        }
                    },
                    "required": [
                        "condition",
                        "name",
                        "referenceEndpoint",
                        "referencedResource"
                    ]
                }
            },
            "required": [
                "post-processors"
            ]
        }
    },
    "required": [
        "context",
        "engine",
        "metadata",
        "spec",
        "type"
    ]
}