{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FHIRConnect Context Schema",
  "type": "object",
  "properties": {
    "engine": {
      "type": "string",
      "pattern": "^FHIRConnect/v[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "type": {
      "type": "string",
      "enum": [
        "context"
      ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ]
    },
    "spec": {
      "type": "object",
      "properties": {
        "system": {
          "type": "string",
          "enum": [
            "FHIR"
          ]
        },
        "version": {
          "type": "string",
          "enum": [
            "R4"
          ]
        }
      },
      "required": [
        "system",
        "version"
      ]
    },
    "context": {
      "type": "object",
      "properties": {
        "profileUrl": {
          "type": "string",
          "format": "uri"
        },
        "templateId": {
          "type": "string"
        },
        "archetypes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "extensions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "start": {
          "type": "string"
        }
      },
      "required": [
        "profileUrl",
        "templateId",
        "archetypes",
        "start"
      ]
    }
  },
  "required": [
    "engine",
    "type",
    "metadata",
    "spec",
    "context"
  ]
}
